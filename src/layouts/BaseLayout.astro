---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  noindex?: boolean;
}

const { 
  title, 
  description = "Diana Santiago - Fine Artist specializing in mixed media artwork exploring cultural translation, femininity, and the modern woman.",
  image = "/og-image.jpg",
  type = "website",
  noindex = false
} = Astro.props;

const currentPath = Astro.url.pathname;
const siteUrl = Astro.site?.href?.replace(/\/$/, '') || 'https://dianasantiago.com';
const canonicalUrl = `${siteUrl}${currentPath}`;
const ogImageUrl = image.startsWith('http') ? image : `${siteUrl}${image}`;
const fullTitle = title === 'Home' ? 'Diana Santiago | Fine Artist' : `${title} | Diana Santiago`;

// Structured data for the artist
const artistSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Diana Santiago",
  "jobTitle": "Fine Artist",
  "description": "Mixed media artist exploring cultural translation, femininity, and the modern woman. Based in New York.",
  "url": siteUrl,
  "sameAs": [],
  "knowsAbout": ["Painting", "Drawing", "Photography", "Mixed Media Art", "Installation Art"]
};

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Diana Santiago Portfolio",
  "url": siteUrl,
  "description": description,
  "author": {
    "@type": "Person",
    "name": "Diana Santiago"
  }
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <meta name="author" content="Diana Santiago" />
    <meta name="keywords" content="Diana Santiago, fine artist, mixed media, paintings, drawings, photography, New York artist, contemporary art, feminist art" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Robots -->
    {noindex ? (
      <meta name="robots" content="noindex, nofollow" />
    ) : (
      <meta name="robots" content="index, follow" />
    )}
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Diana Santiago" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/og-image.jpg" />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#1a1a1a" />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(artistSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
  </head>
  <body>
    <header class="header">
      <div class="header-inner">
        <div class="logo">
          <a href="/">Diana Santiago</a>
        </div>
        
        <button class="mobile-menu-toggle" aria-label="Toggle menu" id="menu-toggle">
          <span></span>
          <span></span>
          <span></span>
        </button>
        
        <nav class="nav" id="nav">
          <div class="nav-dropdown">
            <a href="/work" class:list={[{ active: currentPath.startsWith('/work') }]}>New Work</a>
            <div class="nav-dropdown-content">
              <a href="/work/paintings">Paintings</a>
              <a href="/work/drawings">Drawings</a>
              <a href="/work/photos">Photos</a>
            </div>
          </div>
          <a href="/archive" class:list={[{ active: currentPath.startsWith('/archive') }]}>Archive</a>
          <a href="/about" class:list={[{ active: currentPath === '/about' }]}>About</a>
          <a href="/contact" class:list={[{ active: currentPath === '/contact' }]}>Contact</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="footer">
      <p>&copy; {new Date().getFullYear()} Diana Santiago. All rights reserved.</p>
    </footer>

    <script>
      const menuToggle = document.getElementById('menu-toggle');
      const nav = document.getElementById('nav');
      
      menuToggle?.addEventListener('click', () => {
        nav?.classList.toggle('open');
      });
    </script>
  </body>
</html>
